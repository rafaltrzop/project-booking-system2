{% extends 'base.html.twig' %}

{% block title %}{{ 'none.admin-head.title'|trans }} &mdash; {{ parent() }}{% endblock %}

{% block header %}
  {% include '_header_admin.twig' %}
{% endblock %}

{% block body %}
  <main class="body-content-container">
    <div class="row" data-equalizer data-equalize-on="medium">
      <div class="medium-6 columns">
        <a href="{{ path('submission_rate') }}">
          <div class="menu-action" data-equalizer-watch>
            <h1>{{ 'admin.menu-action.rate-submissions'|trans }}</h1>
          </div>
        </a>
      </div>
      <div class="medium-6 columns">
        <a href="{{ path('project_overview') }}">
          <div class="menu-action" data-equalizer-watch>
            <h1>{{ 'admin.menu-action.projects-overview'|trans }}</h1>
          </div>
        </a>
      </div>
    </div>
  </main>
{% endblock %}
