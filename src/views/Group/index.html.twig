{% extends 'base.html.twig' %}

{% block title %}{{ 'none.admin-head.title'|trans }} &mdash; {{ parent() }}{% endblock %}

{% block header %}
  {% include '_header_admin.twig' %}
{% endblock %}

{% block body %}
  <main class="body-content-container">
    <div class="column row">
      <h1>{{ 'group.list.h1'|trans }}</h1>
      <table class="scroll">
        <thead>
          <tr>
            <th>{{ 'group.list.group-name'|trans }}</th>
            <th class="text-center">{{ 'group.list.options'|trans }}</th>
          </tr>
        </thead>
        <tbody>
          {% for group in groups %}
            <tr>
              <td>{{ group.name }}</td>
              <td>
                  <a href="{{ path('group_edit', {'id' : group.id}) }}" class="hollow button">{{ 'group.list.edit'|trans }}</a>
                  {% if not group.topic %}
                    <a href="{{ path('group_delete', {'id' : group.id}) }}" class="hollow button" onclick="return confirm('{{ 'group.list.confirm'|trans }}');">{{ 'group.list.delete'|trans }}</a>
                  {% endif %}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </main>
{% endblock %}
