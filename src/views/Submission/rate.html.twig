{% extends 'base.html.twig' %}
{% for submission in submissions %}
  {% form_theme forms[loop.index0] 'form/logged_in.html.twig' %}
{% endfor %}

{% block title %}{{ 'none.admin-head.title'|trans }} &mdash; {{ parent() }}{% endblock %}

{% block header %}
  {% include '_header_admin.twig' %}
{% endblock %}

{% block body %}
  <main class="body-content-container">
    <div class="column row">
      <h1>Oceń wykonane projekty</h1>
      <table class="scroll">
        <thead>
          <tr>
            <th>Data</th>
            <th>Autor</th>
            <th>Temat projektu</th>
            <th>Ocena</th>
            <th class="text-center">Zmień ocenę</th>
          </tr>
        </thead>
        <tbody>
          {% for submission in submissions %}
            <tr>
              <td>{{ submission.submitted_at }}</td>
              <td>{{ submission.first_name }} {{ submission.last_name }}</td>
              <td>{{ submission.topic }}</td>
              <td>
                {% if submission.mark %}
                  {{ submission.mark }}
                {% else %}
                  &mdash;
                {% endif %}
              </td>
              <td>
                {{ form(forms[loop.index0]) }}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </main>
{% endblock %}
