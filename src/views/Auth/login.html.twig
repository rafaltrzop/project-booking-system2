{% extends 'base.html.twig' %}
{% form_theme form 'form/landing_page.html.twig' %}

{% block title %}{{ 'auth.head.title'|trans }} &mdash; {{ parent() }}{% endblock %}
{% block body_class %}landing-page{% endblock %}

{% block body %}
  <section class="row">
    <div class="landing-page-form columns absolute-center">
      <div class="landing-page-logo text-center fa fa-unlock-alt"></div>
      <h1 class="landing-page-header text-center">{{ 'auth.landing-page.h1'|trans }}</h1>
      {% if error|length > 0 %}
        <ul>
          <li>{{ error }}</li>
        </ul>
      {% endif %}
      {{ form_start(form, {'action': path('auth_login_check')}) }}
      {{ form_widget(form) }}
      {{ form_end(form) }}
    </div>
  </section>
{% endblock %}
